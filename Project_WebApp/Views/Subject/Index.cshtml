@model List<Project_WebApp.ViewModels.Subject.SubjectViewModel>

@{
    ViewData["Title"] = "Onderwerpen";
    Layout = "~/Views/Shared/ProjectLayout.cshtml";
}

Overzicht van onderwerpen

<a asp-area="" asp-controller="Subject" asp-action="Editor">
    Onderwerp aanmaken
</a>
<div class="row">
    <div class="col-md-6">
        <input type="search" class="form-control" placeholder="Zoeken..." />
    </div>
    <div class="col-md-6">
        <select class="form-control" aria-label="Filter">
            <option disabled selected>Filter</option>
            <option value="0">Naam A-Z</option>
            <option value="1">Naam Z-A</option>
            <option value="2">Recent gemaakt</option>
            <option value="2">Populair</option>
        </select>
    </div>
</div>
@for (int i = 0; i < Model.Count; i = i +2)
{
    <div class="row">
        @for (int _i = 0; _i < 2; _i++)
        {
            @if(Model.Count >= (i + _i) + 1)
            {
                <div class="col-md-6">
                    <div class="SubjectBox">
                        <h2 class="SubjectBoxTitle brandColor">
                            @Model[i + _i].Name
                        </h2>
                        <div class="SubjectBoxDescription">
                            @Model[i + _i].Description
                        </div>
                        <div class="SubjectBoxLinkDetail">
                            <a asp-controller="Subject" asp-action="Detail" asp-route-id="@Model[i + _i].Id" asp->Meer details...</a>
                        </div>
                        <div class="SubjectBoxAmountOfPosts">
                            Bevat @Model[i + _i].AmountOfPosts Berichten
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}