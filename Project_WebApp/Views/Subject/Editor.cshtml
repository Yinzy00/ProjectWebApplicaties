@model Project_WebApp.ViewModels.SubjectViewModels.SubjectViewModel
@{
    ViewData["Title"] = "Subject editor";
    Layout = "~/Views/Shared/ProjectLayout.cshtml";
}
<form asp-controller="Subject" asp-action="@(ViewBag.NewSubject ? "Create" : "Update")">
    <div id="PostEditorForm">
        <div id="PostEditorTitleContainer">
            <h2>
                @(ViewBag.NewSubject ? "Onderwerp aanmaken" : "Onderwerp wijzigen")
            </h2>
        </div>
        <div id="SubjectEditorTitleTxtContainer">
            <input type="text" class="form-control" asp-for="Name" placeholder="Onderwerp naam" />
        </div>
        <div id="SubjectEditorTextContainer">
            <textarea class="form-control" asp-for="Description" placeholder="Beschrijving...">

            </textarea>
        </div>
        <div id="SubjectEditorSubmitContainer">
            <input type="submit" class="btn brandBtn float-right" value="@(ViewBag.NewSubject ? "Aanmaken" : "Opslaan")"/>
        </div>
    </div>
</form>