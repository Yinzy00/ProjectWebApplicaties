@model Project_WebApp.ViewModels.Forms.LoginFormModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/ProjectLayout.cshtml";
}


<div>
    @ViewBag.LoginMessage
</div>

<form asp-action="Login" asp-controller="Auth">

    <div id="LoginFormContainer" class="AuthFormContainer">
        <div id="LoginFormLogoContainer" class="AuthLogoContainer">
            <img src="~/images/logo.png" alt="Logo" class="AuthLogo" />
        </div>
        <div class="AuthTitleContainer">
            <h2>
                Login
            </h2>
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="LoginUserNameIcon">
                    <i class="fas fa-user"></i>
                </span>
            </div>

            <input type="text" name="userName" asp-for="userName" id="txtLoginUserName" placeholder="Gebruikersnaam" class="form-control" aria-label="Username" aria-describedby="LoginUserNameIcon" />
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="LoginPasswordIcon">
                    <i class="fas fa-lock"></i>
                </span>
            </div>
            <input type="password" name="password" asp-for="password" id="txtLoginPassword" placeholder="Wachtwoord" class="form-control" aria-label="password" aria-describedby="LoginPasswordIcon" />
        </div>
        <div id="LoginRememberMeForgotPasswordContainer">
            <div id="LoginRememberMe">
                <input type="checkbox" class="form-check-input" id="cbLoginRemindMe" />
                <label for="cbLoginRemindMe" class="form-check-label">Onthoud me</label>
            </div>
            <div id="LoginForgotPassword">
                <a asp-controller="Auth" asp-action="ForgotPassword">Wachtwoord vergeten</a>
            </div>
        </div>
        <div id="LoginButtonContainer">
            <input type="submit" asp-route-ReturnUrl="@Model.ReturnUrl" class="btn brandBtn w-100" id="btnLogin" value="Aanmelden" />
        </div>
    </div>
    <div class="AuthDriehoekContainer">
        <div class="AuthDriehoek">
        </div>
    </div>
</form>